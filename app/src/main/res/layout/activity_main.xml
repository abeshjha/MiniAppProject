<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >


            <LinearLayout
                android:id="@+id/headerlinearLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:background="@drawable/bg"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    />

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"

                    android:fontFamily="cursive"
                    android:text="Permission managment in App in App Architecture "
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/headerlinearLayout"
                >

                <androidx.cardview.widget.CardView
                    parent="Theme.MaterialComponents.Light.Bridge"
                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_1"
                    android:layout_width="0dp"
                    app:strokeColor="#32439E"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/bus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/bus"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:text="Mini App- 1(Funtionality Demonstration)"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout1"
                >

                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_2"
                    android:layout_width="0dp"
                    app:strokeColor="#32439E"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/book"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/book"
                            android:text="Mini App - 2 (Secure Communication)"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout2"
                >

                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_3"
                    android:layout_width="0dp"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:strokeColor="#32439E"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/acc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            android:layout_marginTop="15dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/acc"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:text="Mini App - 3 (Contact Spoofing)"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout3"
                >

                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_4"
                    android:layout_width="0dp"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:strokeColor="#32439E"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ass"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            android:layout_marginTop="15dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/ass"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:text="Mini App 4- (Location Spoofing)"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout4"
                >

                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_5"
                    android:layout_width="0dp"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:strokeColor="#32439E"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iss"
                            android:layout_width="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/iss"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:text="Mini App 5 (Permission Mangement)"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout5"
                >

                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="5dp"
                    app:strokeWidth="2dp"
                    android:id="@+id/mini_6"
                    android:layout_width="0dp"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:strokeColor="#32439E"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:background="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/isss"
                            android:layout_width="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_baseline_arrow_right_24"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@+id/isss"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:text="Mini App 6 (Downloading/ Caching)"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>